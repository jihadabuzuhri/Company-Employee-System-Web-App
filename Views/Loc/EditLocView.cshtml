@model Loc
@{
    ViewBag.Title = "Edit Location";
}

<h2>Edit Location</h2>

<form asp-controller="Loc" asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Street">Street</label>
        <input asp-for="Street" class="form-control">
    </div>

    <input type="hidden" asp-for="LocID" />


    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-controller="Loc" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>